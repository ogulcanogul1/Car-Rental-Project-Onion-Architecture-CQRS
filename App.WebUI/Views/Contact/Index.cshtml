@model App.Dtos.ContactDtos.CreateContactDto

@{
    Layout = "~/Views/UILayout/Layout.cshtml";
}



<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_FooterAddressComponentPartial")

            <div class="col-md-8 block-9 mb-md-5">
                <form asp-controller="Contact" asp-action="Index" class="bg-light p-5 contact-form" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ad - Soyad" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <textarea id="" cols="30" rows="7" class="form-control" placeholder="Mesaj" asp-for="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mesajı Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
        

    </div>
</section>